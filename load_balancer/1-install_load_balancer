#!/usr/bin/env bash
# This script installs and configures HAProxy on a new Ubuntu server to load balance traffic between web-01 and web-02 using a round-robin algorithm.

# Update system packages
sudo apt update -y
sudo apt upgrade -y

# Install HAProxy
sudo apt install -y haproxy

# Enable HAProxy to start on boot
sudo systemctl enable haproxy

# Create HAProxy configuration file
sudo tee /etc/haproxy/haproxy.cfg > /dev/null <<EOF
global
    log 127.0.0.1   local0
    maxconn 200

defaults
    log     global
    option  httplog
    option  dontlognull
    timeout connect 5000ms
    timeout client  50000ms
    timeout server  50000ms

frontend http_front
    bind *:80
    default_backend http_back

backend http_back
    balance roundrobin
    server web01 54.158.78.233:80 check
    server web02 54.197.104.147:80 check
EOF

# Test HAProxy configuration for syntax errors
sudo haproxy -c -f /etc/haproxy/haproxy.cfg

# Restart HAProxy to apply the new configuration
sudo systemctl restart haproxy

# Display success message
echo "HAProxy has been configured to load balance between web-01 and web-02 using round-robin."
